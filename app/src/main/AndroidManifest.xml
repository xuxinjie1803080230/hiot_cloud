<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hiot_cloud">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/hiotapp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/hiotapp"
        android:supportsRtl="true"
        android:theme="@style/Theme.HiotCloud.NoAction">
        <activity android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden">
        </activity>
        <activity android:name=".test.lifecycletest.TestLifeCycleActivity">
        </activity>
        <activity android:name=".test.mvptest.TestMvpActivity"></activity>
        <activity android:name=".ui.main.aplashMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>